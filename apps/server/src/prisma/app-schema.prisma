generator client {
  provider      = "prisma-client-js"
  output        = "../../../../node_modules/@prisma/app-client"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

generator prismaClassGenerator {
  provider                        = "prisma-generator-nestjs-dto"
  output                          = "../app/generated/rest/dto"
  outputToNestJsResourceStructure = "false"
  createDtoPrefix                 = "Create"
  entityPrefix                    = ""
  classValidation                 = "true"
  entitySuffix                    = ""
  exportRelationModifierClasses   = "true"
  definiteAssignmentAssertion     = "true"
  updateDtoPrefix                 = "Update"
  dtoSuffix                       = "Dto"
  noDependencies                  = "false"
  reExport                        = "false"
  prettier                        = "true"
  flatResourceStructure           = "false"
  fileNamingStyle                 = "kebab"
  annotateAllDtoProperties        = "true"
}

datasource db {
  provider = "postgres"
  url      = env("SERVER_APP_DATABASE_URL")
}

model AppDemo {
  id        String   @id(map: "PK_APP_DEMO") @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  name      String   @unique(map: "UQ_APP_DEMO") @db.VarChar(128)
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  createdAt DateTime @default(now()) @db.Timestamp(6)
  /// @DtoCreateHidden
  /// @DtoUpdateHidden
  updatedAt DateTime @default(now()) @db.Timestamp(6)
}

model migrations_server {
  installed_rank Int      @id(map: "__migrations_server_pk")
  version        String?  @db.VarChar(50)
  description    String   @db.VarChar(200)
  type           String   @db.VarChar(20)
  script         String   @db.VarChar(1000)
  checksum       Int?
  installed_by   String   @db.VarChar(100)
  installed_on   DateTime @default(now()) @db.Timestamp(6)
  execution_time Int
  success        Boolean

  @@index([success], map: "__migrations_server_s_idx")
  @@map("__migrations_server")
}
